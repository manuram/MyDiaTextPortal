<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link rel="SHORTCUT ICON" href="@Url.Content("~/Content/images/favicon.ico")"/>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-31340542-1']);
  _gaq.push(['_setDomainName', 'mydiatext.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
@(Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.office2010silver.css").Combined(true).Compress(true)))
@RenderSection("HEAD", false)
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <br />
                <a href="/"><img src="../../Content/images/MyDiaText_Small_BlackRed.png" height="64px" width="264px" alt="MyDiaText Logo" /></a>
            </div>
            <div id="logindisplay">
                @if(User.Identity.Name == "Administrator" || User.Identity.Name == "administrator"){
                    <text>
                    @Html.ActionLink("Admin Page","Index","Admin")
                    </text>
                }
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Learn More", "Demo", "Home")</li>
                    <li>@Html.ActionLink("My Profile", "MyProfile", "Account")</li>
                    <li>@Html.ActionLink("Quizzes", "Quizzes", "Home")</li>
                    <li>@Html.ActionLink("Links", "Links", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            <div id="errors" style="color:red">@TempData["ErrorMessage"]</div>
            @RenderBody()
        </div>
        <div id="footer">
            @Html.Partial("_FooterPartial")
        </div>
    </div>
@(Html.Telerik().ScriptRegistrar().DefaultGroup(group => group.Combined(true).Compress(true)))</body>
</html>
