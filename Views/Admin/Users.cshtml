@model MembershipUserCollection
@{
    ViewBag.Title = "Users";
}

<h2>All users</h2>
<table>
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Approved</th>
        <th>Last Login Date</th>
        <th>Account Created</th>
        <th>Actions</th>
    </tr>

@foreach (MembershipUser user in Model) {
    <tr>
        <td>@user.UserName</td>
        <td>@user.Email</td>
        <td>@Html.ActionLink(user.IsApproved.ToString() ,"DisableUser", new { username = user.UserName.ToString() }) </td>
        <td>@user.LastLoginDate</td>
        <td>@user.CreationDate</td>
        <td>
            @Html.ActionLink("Profile", "Profile", new { username = user.UserName.ToString() }) |
            @Html.ActionLink("SMS History", "History", new { username = user.UserName.ToString() }) |
            @Html.ActionLink("Delete", "DeleteUser", new { username = user.UserName.ToString() })
        </td>
    </tr>
}

</table>
