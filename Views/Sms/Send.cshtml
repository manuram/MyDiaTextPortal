@model SeniorDesign.Models.SmsModel
@{
    ViewBag.Title = "Text Message Test Page";
}

<h2>Send a message</h2>    
    @using Twilio;
    @using (Html.BeginForm())
    {
    @Html.ValidationSummary(true, "Could not send SMS message. Please try again.")
    <div>
            <div class="editor-label">
                @Html.LabelFor(m => m.phoneTo)
            </div>            
            <div class="editor-field">
               @Html.TextBoxFor(m => m.phoneTo)
               @Html.ValidationMessageFor(m => m.phoneTo)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.message)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.message)
            </div>
            
    <p>
        <input type="submit" value="Send SMS" />
    </p>
    </div>
    }